{

	"Description" : "AWS CloudFormation template to create Security Group",

    "Resources": {
	
        "SGManish": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Allow HTTP & SSH",
                "VpcId": "vpc-06bb8d95600063fd3",
                "SecurityGroupIngress": [
                {
                    "IpProtocol": "tcp",
                    "FromPort": "80",
                    "ToPort": "80",
                    "CidrIp": "0.0.0.0/0"
                },
                
                {
                    "IpProtocol": "tcp",
                    "FromPort": "22",
                    "ToPort": "22",
                    "CidrIp": "0.0.0.0/0"
                }

				],
				
				
				"SecurityGroupEgress": [
                {
                    "IpProtocol": "tcp",
                    "FromPort": "80",
                    "ToPort": "80",
                    "CidrIp": "0.0.0.0/0"
                },
                
                 {
                    "IpProtocol": "tcp",
                    "FromPort": "443",
                    "ToPort": "443",
                    "CidrIp": "0.0.0.0/0"
                }
               
				]
			
            }
        },
		
		
		
		"ec2":{
			"Type":"AWS::EC2::Instance",
			"Properties":{
				"KeyName":"own",
				"ImageId":"ami-ee6f5e8b",

				"NetworkInterfaces":[{

					"GroupSet":[{
						"Ref":"SGManish"
						}],
					"DeviceIndex":"0",
					"DeleteOnTermination":"true",
					"SubnetId":"subnet-02591f6431d5175c7"
				}]
			}
		
		
	
    }
}


}




