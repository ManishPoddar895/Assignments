{

	
	

	"Description" : "AWS CloudFormation template to create Security Group",

    "Resources": {
	
        "SGManish": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Allow HTTP & SSH",
                "SecurityGroupIngress": [
                {
                    "IpProtocol": "tcp",
                    "FromPort": "80",
                    "ToPort": "80",
                    "CidrIp": "0.0.0.0/0"
                },
                
                {
                    "IpProtocol": "tcp",
                    "FromPort": "22",
                    "ToPort": "22",
                    "CidrIp": "0.0.0.0/0"
                }

				],
				
				
				"Tags" : [
					{"Key": "Name", "Value": "Project_EC2_SG"}
				]
				
            }
        }
		
	
    },
	
	
	"Outputs" : {
		"sg" : {
		"Description" : "sg for Instance",
		"Value" :  { "Ref" : "SGManish" },
		"Export" : { "Name" : "sg1"}}
	}
	
}





